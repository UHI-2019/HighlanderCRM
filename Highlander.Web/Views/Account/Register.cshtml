@model RegisterAccountViewModel
@{
    ViewBag.Title = "Register";
}
<h1>Register</h1>

<div class="container">
    <form method="post" asp-controller="Account" asp-action="Register">
        <div class="row">

            <div asp-validation-summary="ModelOnly"></div>
            <div class="col-6"  style="border-right: ridge;">

                <!--TITLE-->
                <div class="form-group">
                    <label asp-for="TitleId"></label>
                    <select asp-for="TitleId" asp-items="@Model.Titles" class="form-control"></select>
                </div>
                <!--DECORATION-->
                <div class="form-group">
                    <label asp-for="DecorationId"></label>
                    <select asp-for="DecorationId" asp-items="@Model.Decorations" class="form-control"></select>
                </div>
                <!--FORENAME | INITIAL | SURNAME-->
                <div class="row">
                    <div class="form-group col-sm-4">
                        <label asp-for="@Model.Forename"></label>
                        <input asp-for="@Model.Forename" class="form-control" />
                        <span asp-validation-for="@Model.Forename"></span>
                    </div>

                    <div class="form-group col-sm-4">
                        <label asp-for="@Model.Initial"></label>
                        <input asp-for="@Model.Initial" class="form-control" />
                        <span asp-validation-for="@Model.Initial"></span>
                    </div>

                    <div class="form-group col-sm-4">
                        <label asp-for="@Model.Surname"></label>
                        <input asp-for="@Model.Surname" class="form-control" />
                        <span asp-validation-for="@Model.Surname"></span>
                    </div>
                </div>
                <!--PHONENUMBER-->
                <div class="form-group">
                    <label asp-for="@Model.PhoneNumber"></label>
                    <input asp-for="@Model.PhoneNumber" class="form-control" />
                    <span asp-validation-for="@Model.PhoneNumber"></span>
                </div>
                <!--EMAIL-->
                <div class="form-group">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email"></span>
                </div>
                <!--PASSWORD-->
                <div class="form-group">
                    <label asp-for="@Model.Password"></label>
                    <input asp-for="@Model.Password" class="form-control" />
                    <span asp-validation-for="@Model.Password"></span>
                </div>
                


            </div>
            <div class="col-6">
                <!--ADRESS 1-->
                <div class="form-group">
                    <label asp-for="@Model.AddressLine1"></label>
                    <input asp-for="@Model.AddressLine1" class="form-control" />
                    <span asp-validation-for="@Model.AddressLine1"></span>
                </div>
                <!--ADRESS 2-->
                <div class="form-group">
                    <label asp-for="@Model.AddressLine2"></label>
                    <input asp-for="@Model.AddressLine2" class="form-control" />
                    <span asp-validation-for="@Model.AddressLine2"></span>
                </div>
                <!--ADRESS 3-->
                <div class="form-group">
                    <label asp-for="@Model.AddressLine3"></label>
                    <input asp-for="@Model.AddressLine3" class="form-control" />
                    <span asp-validation-for="@Model.AddressLine3"></span>
                </div>
                <!--COUNTY | COUNTRY | POSTCODE-->
                <div class="row">
                    <div class="form-group col-4">
                        <label asp-for="@Model.County"></label>
                        <input asp-for="@Model.County" class="form-control" />
                        <span asp-validation-for="@Model.County"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="@Model.Country"></label>
                        <input asp-for="@Model.Country" class="form-control" />
                        <span asp-validation-for="@Model.Country"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="@Model.Postcode"></label>
                        <input asp-for="@Model.Postcode" class="form-control" />
                        <span asp-validation-for="@Model.Postcode"></span>
                    </div>
                </div>                
                <div class="row"></div>
                <div class="form-group">
                    <label></label>
                    <input type="checkbox" asp-for="@Model.IsNewsletterSubscriber" />
                    <label class="form-check-label" asp-for="@Model.IsNewsletterSubscriber"></label>
                </div>

                <div class="text-center mt-5">
                    <input type="submit" value="Register" class="btn btn-primary" />
                </div>

                <div class="mt-2 text-center">
                    <p>Already have an account? <a asp-action="Login" asp-controller="Account">Login</a>.</p>
                </div>


            </div>
        </div>
    </form>

</div>





