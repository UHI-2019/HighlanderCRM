@model EditAccountViewModel
@{
    ViewBag.Title = "Profile";
    ViewBag.Code = "P";
}

<h2>Manage your account</h2>
<h4>Change your account settings</h4>
<hr />

<div class="row">
    <div class="col-md-3">
        <partial name="_AccountPills" />
    </div>
    <div class="col-md-9">
        <h4 class="mb-4">Profile</h4>
        <form method="post" asp-controller="Account" asp-action="Edit">
            <div asp-validation-summary="ModelOnly"></div>

            <input type="hidden" asp-for="@Model.User.Id" />

            <div class="form-group">
                <label asp-for="TitleId">Title</label>
                <select asp-for="TitleId" asp-items="@Model.Titles" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="DecorationId">Decoration</label>
                <select asp-for="DecorationId" asp-items="@Model.Decorations" class="form-control"></select>
            </div>

            <div class="row">
                <div class="form-group col-sm-4">
                    <label asp-for="@Model.User.Forename"></label>
                    <input asp-for="@Model.User.Forename" class="form-control" />
                    <span asp-validation-for="@Model.User.Forename"></span>
                </div>

                <div class="form-group col-sm-4">
                    <label asp-for="@Model.User.Initial"></label>
                    <input asp-for="@Model.User.Initial" class="form-control" />
                    <span asp-validation-for="@Model.User.Initial"></span>
                </div>

                <div class="form-group col-sm-4">
                    <label asp-for="@Model.User.Surname"></label>
                    <input asp-for="@Model.User.Surname" class="form-control" />
                    <span asp-validation-for="@Model.User.Surname"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="@Model.User.AddressLine1"></label>
                <input asp-for="@Model.User.AddressLine1" class="form-control" />
                <span asp-validation-for="@Model.User.AddressLine1"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.User.AddressLine2"></label>
                <input asp-for="@Model.User.AddressLine2" class="form-control" />
                <span asp-validation-for="@Model.User.AddressLine2"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.User.AddressLine3"></label>
                <input asp-for="@Model.User.AddressLine3" class="form-control" />
                <span asp-validation-for="@Model.User.AddressLine3"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.User.County"></label>
                <input asp-for="@Model.User.County" class="form-control" />
                <span asp-validation-for="@Model.User.County"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.User.Country"></label>
                <input asp-for="@Model.User.Country" class="form-control" />
                <span asp-validation-for="@Model.User.Country"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.User.Postcode"></label>
                <input asp-for="@Model.User.Postcode" class="form-control" />
                <span asp-validation-for="@Model.User.Postcode"></span>
            </div>

            <div class="form-group">
                <input type="checkbox" asp-for="@Model.User.IsNewsletterSubscriber" />
                <label class="form-check-label" asp-for="@Model.User.IsNewsletterSubscriber"></label>
            </div>

            <!-- Role based conditions here -->

            <div>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>