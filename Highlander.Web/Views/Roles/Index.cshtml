@model RolesIndexViewModel
@{
    ViewData["Title"] = "Roles";
}

<section class="pt-4">
    <h1>@ViewBag.Title</h1>
</section>

<section class="pt-4">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Roles)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td class="details-arrow">
                        <a asp-controller="Roles" asp-action="Details" asp-route-id="@item.Id"><i class="ion ion-md-arrow-round-forward"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

<a href="/Roles/Create" class="btn btn-primary">New Role</a>