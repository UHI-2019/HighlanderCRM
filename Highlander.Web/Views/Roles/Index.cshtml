@model RolesIndexViewModel
@{
    ViewData["Title"] = "Roles";
}

<section>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Roles)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td class="details-arrow">
                        <a asp-controller="Roles" asp-action="Details" asp-route-id="@item.Id"><i class="ion ion-md-arrow-round-forward"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

<a href="/Roles/Create" class="btn btn-primary d-inline-block mt-3">New Role</a>

@section Scripts
{
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $("table").DataTable({
                "columnDefs": [
                    {
                        "targets": [2],
                        "orderable": false
                    }
                ]
            });
        });
    </script>
}